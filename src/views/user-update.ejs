<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div>
    </div>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="POST" action="/users/update-user">
                    <!--khi click vao nut submit thi trinh duyet se dieu huong ve duong dan trong action vowis method POST-->
                    <input hidden value="<%=userData.id %>" class="" id="" name="id">
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input value="<%= userData.email %>" type="email" class="form-control" id="email" name="email"
                            required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div>
                        <div class="mb-3 col-6">
                            <label for="username" class="form-label">UserName</label>
                            <input value="<%= userData.username %>" type="text" class="form-control" id="username"
                                name="username" required>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>