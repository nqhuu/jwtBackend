<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div>
    </div>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="POST" action="/users/create-user">
                    <!--khi click vao nut submit thi trinh duyet se dieu huong ve duong dan trong action vowis method POST-->
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div>
                        <div class="mb-3 col-6">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>
                    <div>
                        <div class="mb-3 col-6">
                            <label for="username" class="form-label">UserName</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="table-users mt-3">
                <h3></h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Email</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%=index+1%>
                                </th>
                                <td>
                                    <%=item.email%>
                                </td>
                                <td>
                                    <%=item.username%>
                                </td>
                                <td>
                                    <a class="btn btn-warning" href="/users/update-user/<%= item.id%>">
                                        Edit
                                    </a>
                                    <form style="display: inline" action="/users/delete-user/<%= item.id%>"
                                        method="POST">
                                        <button type="submit" class=" btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>